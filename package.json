{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host 0.0.0.0 --port 3002",
    "dev:smart": "node scripts/start-dev.js",
    "dev:clean": "node scripts/clean-dev.js && nuxt dev",
    "clean": "node scripts/clean-dev.js",
    "clean:all": "node scripts/clean-dev.js && npm install",
    "clean:force": "node scripts/clean-dev.js && npm install && npm run dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "node .output/server/index.mjs --port 3002"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.2",
    "nuxt": "^3.17.7",
    "pinia": "^3.0.3",
    "plyr": "^3.7.8",
    "vue": "^3.5.18",
    "vue-lazyload": "^3.0.0",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.0"
  }
}
